<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.raywenderlich.android.bill_tipsy.MainActivity">

  <TextView
    android:id="@+id/billLabel"
    style="@style/InputLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_bill"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/billAmountInput"
    style="@style/InputFieldTheme"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:digits="0123456789,."
    android:inputType="numberDecimal"
    android:maxLength="9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/billLabel"
    tools:text="20,00 $" />

  <TextView
    android:id="@+id/tipPercentageLabel"
    style="@style/InputLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_tip_percentage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/billAmountInput" />

  <EditText
    android:id="@+id/tipPercentageInput"
    style="@style/InputFieldTheme"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:digits="0123456789 %"
    android:inputType="number"
    android:maxLength="5"
    android:text="15 %"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tipPercentageLabel"
    tools:text="10 %" />

  <Button
    android:id="@+id/decrementTipPercentage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin"
    android:text="@string/decrement_symbol"
    android:textSize="@dimen/large_text_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tipPercentageInput" />

  <Button
    android:id="@+id/incrementTipPercentage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/default_margin"
    android:text="@string/increment_symbol"
    android:textSize="@dimen/large_text_size"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tipPercentageInput" />

  <TextView
    android:id="@+id/tipAmountLabel"
    style="@style/ResultLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_tip_amount"
    app:layout_constraintBottom_toBottomOf="@id/tipAmount"
    app:layout_constraintEnd_toStartOf="@id/tipAmount"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/tipAmount" />

  <TextView
    android:id="@+id/tipAmount"
    style="@style/ResultFieldTheme"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/totalAmount"
    app:layout_constraintTop_toBottomOf="@id/incrementTipPercentage"
    tools:text="2" />

  <TextView
    android:id="@+id/totalAmountLabel"
    style="@style/ResultLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_total_bill_amount"
    app:layout_constraintBottom_toBottomOf="@id/totalAmount"
    app:layout_constraintEnd_toStartOf="@id/totalAmount"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/totalAmount" />

  <TextView
    android:id="@+id/totalAmount"
    style="@style/ResultFieldTheme"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/totalAmountLabel"
    app:layout_constraintTop_toBottomOf="@id/tipAmount"
    tools:text="22,00" />


</androidx.constraintlayout.widget.ConstraintLayout>