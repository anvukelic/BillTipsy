<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView
    android:id="@+id/billLabel"
    style="@style/InputLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_bill" />

  <EditText
    android:id="@+id/billAmountInput"
    style="@style/InputFieldTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:digits="0123456789,."
    android:inputType="numberDecimal"
    android:maxLength="9"
    tools:text="20,00 $" />

  <TextView
    android:id="@+id/tipPercentageLabel"
    style="@style/InputLabelTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/label_tip_percentage" />

  <EditText
    android:id="@+id/tipPercentageInput"
    style="@style/InputFieldTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:digits="0123456789 %"
    android:inputType="number"
    android:maxLength="5"
    android:text="15 %"
    tools:text="10 %" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tipAmountLabel"
      style="@style/ResultLabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_tip_amount" />

    <TextView
      android:id="@+id/tipAmountInput"
      style="@style/ResultFieldTheme"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="0dp"
      android:text="0"
      tools:text="2" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/totalAmountLabel"
      style="@style/ResultLabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_total_bill_amount" />

    <TextView
      android:id="@+id/totalAmountInput"
      style="@style/ResultFieldTheme"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="0dp"
      android:text="0"
      tools:text="22,00" />

  </LinearLayout>

</LinearLayout>