<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raywenderlich.android.bill_tipsy.MainActivity">

  <TextView
      android:id="@+id/billLabel"
      style="@style/LabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/default_margin"
      android:layout_marginTop="@dimen/default_margin"
      android:text="@string/label_bill"
      android:textSize="20sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/billAmountInput"
      style="@style/InputFieldTheme"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:digits="0123456789,."
      android:inputType="numberDecimal"
      android:maxLength="16"
      app:layout_constraintTop_toBottomOf="@id/billLabel"
      app:layout_constraintEnd_toEndOf="@id/guideline"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="20,00 $" />

  <TextView
      android:id="@+id/tipPercentageLabel"
      style="@style/LabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_tip_percentage"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@id/billAmountInput"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/decrementTipPercentage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="@dimen/default_margin"
      android:background="@color/material_grey_600"
      android:gravity="center"
      android:text="-"
      android:textSize="20sp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintTop_toTopOf="@id/tipPercentageInput"
      app:layout_constraintBottom_toBottomOf="@id/tipPercentageInput"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/tipPercentageInput"
      style="@style/NonEditableInputFieldTheme"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="0dp"
      android:layout_marginStart="0dp"
      android:inputType="numberDecimal"
      android:text="15 %"
      app:layout_constraintTop_toBottomOf="@id/tipPercentageLabel"
      app:layout_constraintEnd_toStartOf="@id/incrementTipPercentage"
      app:layout_constraintStart_toEndOf="@id/decrementTipPercentage"
      tools:text="10 %" />

  <Button
      android:id="@+id/incrementTipPercentage"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginEnd="@dimen/default_margin"
      android:background="@color/material_grey_600"
      android:gravity="center"
      android:text="+"
      android:textSize="20sp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintTop_toTopOf="@id/tipPercentageInput"
      app:layout_constraintBottom_toBottomOf="@id/tipPercentageInput"
      app:layout_constraintEnd_toEndOf="@id/guideline" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5" />

  <TextView
      android:id="@+id/tipAmountLabel"
      style="@style/LabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_tip_amount"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="@id/guideline" />

  <EditText
      android:id="@+id/tipAmountInput"
      style="@style/NonEditableInputFieldTheme"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/guideline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tipAmountLabel"
      tools:text="2" />

  <TextView
      android:id="@+id/totalAmountLabel"
      style="@style/LabelTheme"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/label_total_bill_amount"
      android:textSize="20sp"
      app:layout_constraintTop_toBottomOf="@id/tipAmountInput"
      app:layout_constraintStart_toStartOf="@id/guideline" />

  <EditText
      android:id="@+id/totalAmountInput"
      style="@style/NonEditableInputFieldTheme"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/totalAmountLabel"
      app:layout_constraintStart_toStartOf="@id/guideline"
      app:layout_constraintEnd_toEndOf="parent"
      tools:text="22,00" />

</androidx.constraintlayout.widget.ConstraintLayout>